- @tasks.where(status: status).order(priority: :desc).each do |task|
  .card.task-card
    .card-body
      %h6= task.title
      %p=task.priority.humanize
    .card-footer.table-links 
      = link_to "log", logs_task_path(task), class: "me-2 btn btn-sm btn-outline-primary", data: { turbo_frame: "remote_modal" }
      = link_to "edit", edit_task_path(task), class: "me-2 btn btn-sm btn-outline-primary", data: { turbo_frame: "remote_modal" }
      = button_to "remove", task, method: :delete, class: "btn btn-sm btn-outline-danger", form: { data: { turbo_confirm: "Are you sure?" } }